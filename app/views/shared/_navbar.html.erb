<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">

    <%= image_tag "wave logo.png" %>


    <%= link_to properties_path do %>
      <%= image_tag "NavBarLogo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">

          <li class="nav-item active">
            <%= link_to "Home", properties_path , class: "nav-link btn btn-primary me-3 px-4 border-radius-round text-light rounded-pill" %>
          </li>
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "dropdown menu" %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Reservations", "#", class: "dropdown-item" %>
              <%= link_to "Favorites", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <%# <li class="nav-item dropdown">
          <a href="#" class="avatar">
            <%= image_tag "no profile.png", class: "avatar" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<script>
const avatar = document.getElementById('navbarDropdown')
const dropdown = document.querySelector('.dropdown-menu')

avatar.addEventListener('click', () => {
  dropdown.classList.toggle('show')
})
</script>
