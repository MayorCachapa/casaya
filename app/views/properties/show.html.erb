<div class="container">

  <div class="property-info mb-3">
    <div class="d-flex flex-row">
      <h2><%= @property.name %></h2>
    </div>
    <div class="d-flex flex-row justify-content-between">
      <div>
        <h5><%= @property.address %></h5>
      </div>
      <div>
        <h5>$<%= @property.price_per_night %> per night</h5>
      </div>
    </div>
  </div>

  <div class="container photos-property gx-1 gy-1 d-flex justify-content-evenly mb-3">
    <div class="row">
      <div class="col col-lg-6 col1">
        <img src="<%= image_path "place_holder.jpg"%>" alt="404 error">
      </div>
      <div class="col col-lg-3 col2">
        <div class="tile-photo pb-3"><img src="<%= image_path "place_holder.jpg" %>" alt="404 error"></div>
        <div class="tile-photo"><img src="<%= image_path "place_holder.jpg" %>" alt="404 error"></div>
      </div>
      <div class="col col-lg-3 col3">
        <div class="tile-photo pb-3"><img src="<%= image_path "place_holder.jpg" %>" alt="404 error"></div>
        <div class="tile-photo"><img src="<%= image_path "place_holder.jpg" %>" alt="404 error"></div>
      </div>
    </div>
  </div>

  <div class="reservation-details border-top pt-3">
    <div class="row d-flex justify-content-between">
      <h5 class="w-25"><strong>Property Details:</strong></h5>
      <button type="button" class="btn btn-primary reservation-button border-radius-round text-light rounded-pill">Reserve</button>
    </div>
    <div class="row">
      <p>$<%= @property.price_per_night %> per night</p>
      <p>Sleeps: <%= @property.number_of_guests %> guests</p>
      <p>Description: <%= @property.description %></p>
    </div>

  </div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
Create a reservation</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Make a reservation:</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render"reservations/new", property: @property, user: @user, reservation: @reservation %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
